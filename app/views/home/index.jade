doctype html
html(lang="en")
  include ../includes/head
  body.background
    header.navbar.navbar-transparent.navbar-absolute-top.bs-docs-nav(role='banner')
      .container
        .navbar-inner
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') WeActivity
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/explore') EXPLORE
            li
              a(href='/tryit') TRY IT
            li
              a(href='/login') SIGN IN
            li
              a(href='/signup') JOIN US
    .container
      .introduction.col-md-5
        .title
          h1 A better web starts
          h2 with your activity
        .description
        button#btn-get-start.btn-get-start GET STARTED
      .intro-photo.col-md-7
        img(src='img/Jumbotron.jpg')
    #steps-panel.steps-panel.hidden
      ul.steps
        li#step-upload.step.hidden
          a.headbar
            span.glyphicon.glyphicon-chevron-left back
          .header Publish Your Slides
          .content
            input#input-select-file.hidden(type="file", data-url="/tryit/new", name="slide")
            #dropzone.dropzone.dropzone-normal
              span Drop Your File Here!
              button#btn-select-file.btn.btn-primary.btn-lg Select a file
          #mask.mask.hidden
            .message
              .progress.progress-striped.active
                .progress-bar(role='progressbar', aria-valuenow='45', aria-valuemin='0', aria-valuemax='100', style='width: 100%') Uploading
        li#step-controlling-page.step.hidden
          a.headbar
            span.glyphicon.glyphicon-chevron-left back
          .header Go to Your Controlling Page
          .content
            .thumbnail
              img(src='/img/slide-thumbnail-example.jpg')
            a#btn-control.btn.btn-info.btn-lg(href='#') Go Control!
        li#step-share.step.hidden
          a.headbar
            span.glyphicon.glyphicon-chevron-left back
          .header Share to Your Audience
          .content
            .thumbnail
              img(src='/img/QRCode.jpg')
            .share-link Link:
              a(href='#') http://fakeurl.to.slides
  include ../includes/foot